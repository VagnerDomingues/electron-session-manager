{
  "name": "discord-sessions",
  "version": "1.0.0",
  "description": "Discord Sessions - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "node scripts/build.js",
    "build:win": "node scripts/build.js win",
    "build:mac": "node scripts/build.js mac",
    "build:linux": "node scripts/build.js linux",
    "build:win:nsis": "node scripts/build.js win nsis",
    "build:win:portable": "node scripts/build.js win portable",
    "build:mac:dmg": "node scripts/build.js mac dmg",
    "build:all": "npm run build:win & npm run build:mac & npm run build:linux",
    "build:examples:all": "node scripts/build-all-examples.js",
    "build:examples:win": "node scripts/build-all-examples.js win",
    "build:examples:mac": "node scripts/build-all-examples.js mac",
    "build:examples:linux": "node scripts/build-all-examples.js linux",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "config": "node config.js",
    "check-config": "node scripts/check-config.js"
  },
  "keywords": [
    "electron",
    "session-management",
    "multi-account",
    "desktop",
    "cross-platform",
    "pwa-client"
  ],
  "author": {
    "name": "Vagner Domingues Madeira",
    "email": "vagner_domingues@hotmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "build": {
    "appId": "com.companyname.discord",
    "productName": "Discord Sessions",
    "icon": "assets/Appicons/Discord.ico",
    "copyright": "Copyright Â© 2025 PWA Desktop",
    "directories": {
      "output": "dist/discord"
    },
    "files": [
      "main.js",
      "preload.js",
      "sessionManager.js",
      "assets/**/*",
      "node_modules/**/*",
      ".env"
    ],
    "forceCodeSigning": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": null,
      "category": "public.app-category.social-networking",
      "icon": "assets/Appicons/Discord.png"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "signDlls": false,
      "publisherName": "PWA Desktop",
      "icon": "assets/Appicons/Discord.ico",
      "executableName": "Discord"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Office",
      "icon": "assets/Appicons/Discord.png"
    }
  }
}